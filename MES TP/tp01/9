#include<stdio.h>

//Créez une fonction qui prend un tableau d'entiers et renvoie la somme de ses éléments.

void main()
{
int somme,i,taille,entier[100];
printf("Donner la taille du tableau : ");
scanf("%d",&taille);
for(i=1;i<=taille;i++){
printf("nombre%d = ",i);
scanf("%d",&entier[i]);
}
somme=0;
for(i=1;i<=taille;i++){
somme=somme+entier[i];
}
printf("La somme est : %d",somme);
}
